<%= form_for @task do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :due_at %><br />
    <%= f.datetime_select :due_at, :prompt => true %>
  </p>
  <p>
    <%= f.label :assigned_to %><br />
    <%= f.collection_select :assigned_to, User.all, :id, :username %>
  </p>
  <p><%= f.submit %></p>
<% end %>
