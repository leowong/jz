<% title t('.log_in') %>

<p><%= t('.dont_have_an_account') %><%= link_to t('.sign_up'), signup_path %><%= t('.exclamation') %></p>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, t('.username_or_email_address') %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password, t('.password') %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag t('.log_in') %></p>
<% end %>
