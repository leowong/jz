<%= form_for @activity do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :subject_id %><br />
    <%= f.text_field :subject_id %>
  </p>
  <p>
    <%= f.label :subject_type %><br />
    <%= f.text_field :subject_type %>
  </p>
  <p><%= f.submit %></p>
<% end %>
