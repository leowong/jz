<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Jzcrm" %></title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>
  <%= render 'layouts/header' %>
  <div id="wrapper">
    <div class="container">
      <table class="content">
	<tr>
	  <td class="main">
	    <div class="col">
              <% unless flash.empty? %>
                <div class="flash_messages">
                  <div id="hide_notice">
                    x
                  </div>
                  <div>
                    <% flash.each do |name, msg| %>
                      <%= content_tag :div, msg, :class => "flash #{name}" %>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <div class="row">
                <div class="title">
                  <% if show_title? %>
                    <%= content_tag :h1, yield(:title) %>
                  <% else %>
                    <%= yield(:header) %>
                  <% end %>
                </div>
	        <%= yield %>
              </div>
	    </div>
	  </td>
	  <td class="side">
	    <div class="col">
	      <%= yield :side %>
	    </div>
	  </td>
	</tr>
      </table>
    </div>
  </div>
</body>
</html>
