<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %> <span class="required_indicator">*</span><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %> <span class="required_indicator">*</span><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :password %>
    <% if @user.new_record? %>
      <span class="required_indicator">*</span>
    <% end %>
    <br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <% if @user.new_record? %>
      <span class="required_indicator">*</span>
    <% end %>
    <br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit (@user.new_record? ? t('.sign_up') : t('.update')) %></p>
<% end %>
