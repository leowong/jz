<%= div_for note do %>
  <div class="avatar">
    <%= image_tag 'note.png' %>
  </div>
  <div class="content">
    <div class="timestamp">
      <%= note.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
    </div>
    <div class="header">
      <%= link_to note.to_header, note.annotatable %>
    </div>
    <div class="meta">
      Created by <%= link_to activity.user.username, activity.user %>
    </div>
    <div class="body">
      <%= note.content %>
    </div>
  </div>
<% end %>

