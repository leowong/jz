<%= form_for(@contact) do |f| %>
  <%= f.error_messages %>

  <table>
    <tr>
      <td class="label"><%= f.label :type1 %></td>
      <td><%= f.select :type1, Contact::TYPE1, :include_blank => true %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :type2 %></td>
      <td><%= f.select :type2, Contact::TYPE2, :include_blank => true %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :type3 %></td>
      <td><%= f.select :type3, Contact::TYPE3, :include_blank => true %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :sex %></td>
      <td><%= f.select :sex, Contact::SEX, :include_blank => true %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :age_range %></td>
      <td><%= f.select :age_range, Contact::AGE_RANGE, :include_blank => true %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :mobile %></td>
      <td><%= f.text_field :mobile %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :phone %></td>
      <td><%= f.text_field :phone %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :fax %></td>
      <td><%= f.text_field :fax %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
    </tr>

    <tr>
      <td class="label"><%= f.label :company %></td>
      <td><%= f.text_field :company %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :position %></td>
      <td><%= f.text_field :position %></td>
    </tr>

    <%= f.fields_for :addresses do |builder| %>
    <%= render "address_fields", :f => builder %>
    <% end %>

    <tr>
      <td class="label"><%= f.label :interest %></td>
      <td><%= f.select :interest, Contact::INTEREST, :include_blank => true %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :background_info %></td>
      <td><%= f.text_area :background_info %></td>
    </tr>
    <tr>
      <td>
      </td>
      <td>
  <div class="actions">
    <%= f.submit %>
  </div>
      </td>
    </tr>      
  </table>
<% end %>
