<div class="title">
  <h1><%= @contact.name %></h1>
</div>
<div class="inner">
  <% unless @contact.addresses.empty? %>
    <h2>
      <%= @contact.addresses[0].province.try(:name) %> -
      <%= @contact.addresses[0].city.try(:name) %>
    </h2>
  <% end %>

  <div class="add_note">
    <h2>Add a new note</h2>
    <%= render 'notes/form' %>
  </div>

  <% unless @contact.notes.empty? %>
    <div>
      <%= render @contact.notes.order('created_at DESC') %>
    </div>
  <% end %>

  <% unless @contact.orders.empty? %>
    <h2>Orders:</h2>
    <ul>
      <%= render @contact.orders.order('created_at DESC') %>
    </ul>
  <% end %>
</div>

<% content_for :side do %>
  <div class="inner">
    <%= link_to 'Edit', edit_contact_path(@contact) %>

    <div class="add_order">
      <h2>Add a new order</h2>
      <%= render 'orders/form' %>
    </div>
  </div>
<% end %>
